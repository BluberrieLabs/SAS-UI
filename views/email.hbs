<section id="opening">
    <div class="container">
    	<div class="row">
    	    <div class="col-xs-12">
            <table class="table table-striped table-hover" id="emailtable">
                            <thead class="thead-inverse">
                            <tr>
                                <th>Sender Email</th>
                                <th>Sender Name</th>
                                <th>Subject</th>
                                <th>Trigger</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each users}}
                            <tr onclick="window.location.href = '/manage/messages?msgid={{ this.triggerTag }}';">
                                <td>{{ this.sender }}</td>
                                <td>{{ this.personal }}</td>
                                <td>{{ this.subject }}</td>
                                <td>{{ this.triggerTag }}</td>
                            {{/each}}
                            </tbody>
                        </table>
    		</div> <!-- /.col-xs-12 -->
    	</div> <!-- /.row -->
    </div> <!-- /.container -->
</section>

<script>
$(document).ready(function() {
    $('#emailtable').DataTable();
} );
</script>

<footer id="footer">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <p>{{error}}</p>
            </div>
        </div>
    </div>
</footer>
