<section id="login">
    <div class="container">
    	<div class="row">
    	    <div class="col-xs-12">
        	    <div class="form-wrap">
                <h1>Reset your password</h1>
                    <form role="form" action="/reset" method="post" id="login-form" autocomplete="off" onsubmit="return checkForm(this);">
                      <input type="hidden" name="resid" value="{{resid}}">
                      <input type="hidden" name="mail" value="{{email}}">
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="{{email}}" readonly>
                        </div>
                        <div class="form-group">
                            <label for="key" class="sr-only">Password</label>
                            <input type="password" name="key" id="key" class="form-control" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <label for="keytwo" class="sr-only">Repeat password</label>
                            <input type="password" name="keytwo" id="keytwo" class="form-control" placeholder="Password" required>
                        </div>
                        <input type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Save">
                    </form>
        	    </div>
    		</div> <!-- /.col-xs-12 -->
    	</div> <!-- /.row -->
    </div> <!-- /.container -->
</section>

<footer id="footer">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <p id="errortext">{{error}}</p>
            </div>
        </div>
    </div>
</footer>
